<div class="panel panel-default">
  <div class="panel-heading"><h3><strong>Contribuições</strong></h3></div>
  <div class="panel-body">
    <div data-role="header">
      <% p @cliente %>
      <h1><%= "#{@cliente.nome} : #{@cliente.saldo}" unless @cliente.blank? %></h1>
    </div>

    <div data-role="content">
               <style>table td{font-size: 13px;}</style>
      <table class="table table-striped">
        <tr>
          <th>Cliente</th>
          <th>Saldo</th>
          <th>Ações</th>
        </tr>

          <% @clientes.each do |cliente|%>
            <tr>
              <td><%= link_to cliente.nome, detalhes_contrib_path(cliente.id), 'data-ajax' => "false" %></td>
              <td>R$ <%= cliente.saldo %></td>
              <td><%= link_to 'Editar', novo_cliente_consumo_path, :class => "btn btn-warning" %> <%= link_to 'Excluir', novo_cliente_consumo_path, :class => "btn btn-danger" %></td>
            </tr>
          <% end %>

      </table>

    </div>
  </div>
</div>



